# CPP, HPP files
[*.{cpp,hpp}]
end_of_line = crlf
insert_final_newline = true
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
charset = utf-8
brace_style = next_line
namespace_indentation = all
cpp_indent_namespace_contents = true

# HTML files
[*.html]
indent_size = 2

# CSS files
[*.css]
indent_size = 2

# JavaScript files
[*.js]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
